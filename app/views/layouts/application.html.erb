<!DOCTYPE html>
<html>
  <head>
    <title>PoliticsVote</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

<div class="header">
  <div class="container">
      <div class="row_front">
            <span class="col-xs-2 col-xs-12">
              <%= link_to "toppage", toppages_path,class:"front" %>
            </span>
            <% if current_user %>
            <span class="col-xs-2 col-xs-12">
              <%= link_to "Profile", admin_user_path(current_user.id),class:"front" %>
            </span>
            <span class="col-xs-2 col-xs-12">
              <%= link_to "Logout", logout_path(current_user.id), method: :delete,class:"front" %>
            </span>
              <span class="col-xs-2 col-xs-12">
                <%= link_to 'user', users_path,class:"front" %>
              </span>
            <% else %>
            <span class="col-xs-2 col-xs-12">
              <%= link_to "Sign up", new_admin_user_path,class:"front" %>
            </span>
            <span class="col-xs-2 col-xs-12">
              <%= link_to "Login", login_path,class:"front" %>
            </span>
              <% end %>
      </div>
  </div>
</div>

    <%= yield %>
  </body>
</html>
